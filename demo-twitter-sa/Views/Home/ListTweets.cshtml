@model IEnumerable<DemoTwitterSA.TweetResult>

@{
    ViewBag.Title = "ListTweets";
}

<h2>ListTweets</h2>

<p>
    @Html.ActionLink("Get 5 New Tweets", "GetNewTweets")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeZone)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Language)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.LanguageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LanguageConfidence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RawJson)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentimentScore)
        </th>
        <th></th>
    </tr>
@if (Model.Any())
{
foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeZone)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Language)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.LanguageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageConfidence)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RawJson)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SentimentScore)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
}

</table>
